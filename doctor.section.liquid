<!-- sections/doctor-section.liquid -->
<div class="doctor-section page-width page-width-desktop scroll-trigger animate--slide-in">
  <div class="main-image">
    <img src="{{ section.settings.main_image | img_url: '500x500' }}" alt="Main Image">
    <img class="badge {{ section.settings.badge_placement }}" src="{{ section.settings.badge_image | img_url: '100x100' }}" alt="Badge Image">
  </div>
  <div class="doctor-info">
    <h4 class="doctor-name" style="color: {{ section.settings.doctor_name_color }};">{{ section.settings.doctor_name }}</h4>
    <h2 class="headline" style="color: {{ section.settings.headline_color }};">{{ section.settings.headline }}</h3>
 
    <p>{{ section.settings.body_text }}</p>
    <a class="button cta-button" href="{{ section.settings.button_url }}" style="background-color: {{ section.settings.button_color }}; border-radius: {{ section.settings.button_border_radius }};">{{ section.settings.button_text }}</a>

  </div>
</div>

{% schema %}
{
  "name": "Doctor Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge Image"
    },
    {
      "type": "select",
      "id": "badge_placement",
      "label": "Badge Placement",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ],
      "default": "top-left"
    },
    {
      "type": "text",
      "id": "doctor_name",
      "label": "Doctor's Name",
      "default": "Dr Ernie Sanderson"
    },
    {
      "type": "color",
      "id": "doctor_name_color",
      "label": "Doctor's Name Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Veterinarian-Approved"
    },
    {
      "type": "color",
      "id": "headline_color",
      "label": "Headline Color",
      "default": "#000000"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "All proucts from Dr. Ernie's are vetted and approved by a qualifed veterinarian, ensurin top-quality care for your pet."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View Products"
    },
    {
      "type": "text",
      "id": "button_url",
      "label": "Button URL",
      "default": "https://example.com"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "button_border_radius",
      "label": "Button Border Radius",
      "options": [
        { "value": "0px", "label": "None" },
        { "value": "10px", "label": "Yes" }
      ],
      "default": "10px"
    }
  ],
  "presets": [
    {
      "name": "Doctor Section",
      "category": "Custom sections"
    }
  ]
}
{% endschema %}
